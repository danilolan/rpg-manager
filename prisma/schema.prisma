// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum CharacterCategory {
  PLAYER
  ZOMBIE
  NPC
  MONSTER
  ALLY
}

model Character {
  id         String            @id @default(cuid())
  name       String
  category   CharacterCategory
  age        Int?
  weight     Float?            // in kg
  height     Float?            // in cm
  
  // One-to-one relations
  attributes Attributes?
  status     Status?
  
  // One-to-many relations
  skills     Skill[]
  qualities  Quality[]
  drawbacks  Drawback[]
  
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  
  @@map("characters")
}

model Attributes {
  id           String    @id @default(cuid())
  strength     Int       @default(0)
  intelligence Int       @default(0)
  dexterity    Int       @default(0)
  perception   Int       @default(0)
  constitution Int       @default(0)
  willPower    Int       @default(0)
  
  characterId  String    @unique
  character    Character @relation(fields: [characterId], references: [id], onDelete: Cascade)
  
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  
  @@map("attributes")
}

model Status {
  id         String    @id @default(cuid())
  life       Int       @default(0)
  endurance  Int       @default(0)
  speed      Int       @default(0)
  maxLoad    Float     @default(0)
  
  characterId String   @unique
  character   Character @relation(fields: [characterId], references: [id], onDelete: Cascade)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@map("status")
}

model Skill {
  id          String    @id @default(cuid())
  name        String
  level       Int       @default(0)
  description String?
  
  characterId String
  character   Character @relation(fields: [characterId], references: [id], onDelete: Cascade)
  
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  @@map("skills")
}

model Quality {
  id          String    @id @default(cuid())
  name        String
  level       Int       @default(0)
  description String?
  
  characterId String
  character   Character @relation(fields: [characterId], references: [id], onDelete: Cascade)
  
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  @@map("qualities")
}

model Drawback {
  id          String    @id @default(cuid())
  name        String
  level       Int       @default(0)
  description String?
  
  characterId String
  character   Character @relation(fields: [characterId], references: [id], onDelete: Cascade)
  
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  @@map("drawbacks")
}

model Category {
  id          String      @id @default(cuid())
  name        String
  description String?
  
  items       RandomItem[]
  rollHistory RollHistory[]
  
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  
  @@map("categories")
}

model RandomItem {
  id          String    @id @default(cuid())
  name        String
  description String?   // Optional
  weight      Float?    // Optional - for RPG inventory
  rarity      String?   // Optional
  
  categoryId  String
  category    Category  @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  
  rollHistory RollHistory[]
  
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  @@map("random_items")
}

model RollHistory {
  id        String      @id @default(cuid())
  categoryId String
  category  Category    @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  itemId    String
  item      RandomItem  @relation(fields: [itemId], references: [id], onDelete: Cascade)
  
  createdAt DateTime    @default(now())
  
  @@map("roll_history")
}

model YoutubeVideo {
  id          String   @id @default(cuid())
  name        String
  category    String
  youtubeLink String
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@map("youtube_videos")
}


// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  // Note: Prisma 6.19.x requires 'url' in schema (Prisma 7 will move this to prisma.config.ts)
  url      = env("DATABASE_URL")
}

enum CharacterCategory {
  PLAYER
  ZOMBIE
  NPC
  MONSTER
  ALLY
}

enum SkillType {
  REGULAR
  SPECIAL
}

model Character {
  id         String            @id @default(cuid())
  name       String
  category   CharacterCategory
  age        Int?
  weight     Float?            // in kg
  height     Float?            // in cm
  
  // One-to-one relations
  attributes Attributes?
  status     Status?
  
  // Many-to-many relations with resources
  characterSkills            CharacterSkill[]
  characterQualitiesDrawbacks CharacterQualityDrawback[]
  
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  
  @@map("characters")
}

model Attributes {
  id           String    @id @default(cuid())
  strength     Int       @default(0)
  intelligence Int       @default(0)
  dexterity    Int       @default(0)
  perception   Int       @default(0)
  constitution Int       @default(0)
  willPower    Int       @default(0)
  
  characterId  String    @unique
  character    Character @relation(fields: [characterId], references: [id], onDelete: Cascade)
  
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  
  @@map("attributes")
}

model Status {
  id         String    @id @default(cuid())
  life       Int       @default(0)
  endurance  Int       @default(0)
  speed      Int       @default(0)
  maxLoad    Float     @default(0)
  
  characterId String   @unique
  character   Character @relation(fields: [characterId], references: [id], onDelete: Cascade)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@map("status")
}

model CharacterSkill {
  id          String    @id @default(cuid())
  characterId String
  resourceSkillId String
  level       Int       @default(0)
  
  character   Character @relation(fields: [characterId], references: [id], onDelete: Cascade)
  resourceSkill ResourceSkill @relation(fields: [resourceSkillId], references: [id], onDelete: Cascade)
  
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  @@unique([characterId, resourceSkillId])
  @@map("character_skills")
}

model CharacterQualityDrawback {
  id          String    @id @default(cuid())
  characterId String
  resourceQualityDrawbackId String
  level       Int       @default(0)
  
  character   Character @relation(fields: [characterId], references: [id], onDelete: Cascade)
  resourceQualityDrawback ResourceQualityDrawback @relation(fields: [resourceQualityDrawbackId], references: [id], onDelete: Cascade)
  
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  @@unique([characterId, resourceQualityDrawbackId])
  @@map("character_qualities_drawbacks")
}

model Category {
  id          String      @id @default(cuid())
  name        String
  description String?
  
  items       RandomItem[]
  rollHistory RollHistory[]
  
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  
  @@map("categories")
}

model RandomItem {
  id          String    @id @default(cuid())
  name        String
  description String?   // Optional
  weight      Float?    // Optional - for RPG inventory
  rarity      String?   // Optional
  
  categoryId  String
  category    Category  @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  
  rollHistory RollHistory[]
  
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  @@map("random_items")
}

model RollHistory {
  id        String      @id @default(cuid())
  categoryId String
  category  Category    @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  itemId    String
  item      RandomItem  @relation(fields: [itemId], references: [id], onDelete: Cascade)
  
  createdAt DateTime    @default(now())
  
  @@map("roll_history")
}

model YoutubeVideo {
  id          String   @id @default(cuid())
  name        String
  category    String
  youtubeLink String
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@map("youtube_videos")
}

model ResourceSkill {
  id          String    @id @default(cuid())
  name        String
  description String?
  type        SkillType @default(REGULAR)
  page        Int?
  
  characterSkills CharacterSkill[]
  
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  @@map("resource_skills")
}

model ResourceQualityDrawback {
  id          String   @id @default(cuid())
  name        String
  description String?
  cost        Int      // Positive = Quality, Negative = Drawback
  page        Int?
  
  characterQualitiesDrawbacks CharacterQualityDrawback[]
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@map("resource_qualities_drawbacks")
}

